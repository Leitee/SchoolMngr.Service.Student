{
  "Environment": "Development",
  "Serilog": {
    "Using": [ "Serilog.Exceptions", "Serilog", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "System": "Information",
        "Microsoft": "Information",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "Name": "Console",
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.ffffff zzz} [{Level:u3}] {Message} {NewLine}{Exception}",
                "restrictedToMinimumLevel": "Verbose"
              }
            }
          ]
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "C:\\Temp\\Logs\\SchoolMngr\\Service.Academe-.txt",
                "rollingInterval": "Day",
                "rollOnFileSizeLimit": "true",
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.ffffff zzz} {MachineName} {ProcessId} [{Level:u3}] {SourceContext}: {Message} Scope:{Scope}{NewLine}{Exception}"
              }
            }
          ]
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithExceptionDetails", "DebuggerAttached" ],
    "Properties": {
      "Environment": "LocalDev"
    }
  },
  "DalSection": {
    "UseDatabase": true,
    "DatabaseName": "AcademeDB",
    "DatabaseConnection": "Server=(localdb)\\MSSQLLocalDB;Database=SchoolMngr.Academe;Trusted_Connection=True;",
    "EnableDetailedDebug": true
  }

}
